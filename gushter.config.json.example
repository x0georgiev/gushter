{
  "maxIterations": 10,
  "maxRetriesPerStory": 3,
  "retry": {
    "initialDelayMs": 2000,
    "backoffMultiplier": 2,
    "maxDelayMs": 60000
  },
  "verification": {
    "commands": [
      {
        "name": "typecheck",
        "command": "npm run typecheck"
      },
      {
        "name": "lint",
        "command": "npm run lint"
      },
      {
        "name": "test",
        "command": "npm test"
      }
    ]
  },
  "prdPath": "prd.json",
  "progressPath": "progress.txt",
  "claudeMdPath": "CLAUDE.md"
}
